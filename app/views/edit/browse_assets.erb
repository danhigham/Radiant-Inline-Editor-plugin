<%= stylesheet_link_tag 'assets' %>
<%= javascript_include_tag 'asset_search' %>

<table class="index" cellpadding="0" cellspacing="0" border="0">
	<thead>
		<tr>
			<th colspan="3">
				<span>Search :</span><input id="asset_search" type="text" />
			</th>
		</tr>
		<tr>
			<th class="asset">Asset</th>
			<th class="asset-title">Title</th>
			<th class="content-type">Type</th>
		</tr>
	</thead>
	<tbody id="asset-data-view">
		<%= render :partial => 'assets_table' %>
	</tbody>
</table>

<%= will_paginate @assets %>